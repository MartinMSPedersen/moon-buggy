dnl Process this file with autoconf to produce a configure script.
AC_INIT(moon.h)
AM_INIT_AUTOMAKE(moon-buggy, 0.2)
AM_CONFIG_HEADER(config.h)

dnl Checks for programs.
AC_PROG_CC

dnl Checks for libraries.
AC_CHECK_LIB(curses,initscr,CURSLIB=-lcurses)
if test "x$CURSLIB" = x; then
unset ac_cv_lib_curses_initscr
AC_CHECK_LIB(curses,initscr,CURSLIB="-lcurses -ltermcap",,-ltermcap)
fi
if test "x$CURSLIB" = x; then
AC_CHECK_LIB(ncurses,initscr,CURSLIB=-lncurses)
fi
AC_SUBST(CURSLIB)

dnl Checks for header files.
AC_HEADER_STDC
AC_CHECK_HEADERS(getopt.h)

dnl Checks for typedefs, structures, and compiler characteristics.
AC_C_CONST
AC_TYPE_SIZE_T
AC_TYPE_UID_T

dnl Checks for library functions.
AC_TYPE_SIGNAL
AC_REPLACE_FUNCS(basename)
AC_CHECK_FUNCS(memmove ftruncate getopt_long)

AM_CONDITIONAL(short_getopt, test "x$ac_cv_func_getopt_long" != xyes)

AC_OUTPUT(Makefile)
